<Window x:Class="StreetLightPanel.wndGroupSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="427.2" Width="419.2" Title="群組設定">
    <Grid>
        <ListBox x:Name="lstGroup" HorizontalAlignment="Left" Margin="10,18,0,9.6" Width="118">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding  GroupName}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="btnAdd" Content="刪除" HorizontalAlignment="Left" Height="36" Margin="283,29,0,0" VerticalAlignment="Top" Width="120" Click="btnAdd_Click"/>
        <Button Content="選取" HorizontalAlignment="Left" Height="40" Margin="146,338,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click"/>
        <Button Content="取消" HorizontalAlignment="Left" Height="40" Margin="283,338,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click_1"/>

    </Grid>
</Window>
