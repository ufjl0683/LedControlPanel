<navigation:Page x:Class="slPanel.Login" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           mc:Ignorable="d"
           xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
           d:DesignWidth="640" d:DesignHeight="480"
           Title="Login Page">
    <Grid x:Name="LayoutRoot">
    	<Grid Margin="0" HorizontalAlignment="Center" Width="233" Height="75" VerticalAlignment="Center">
    		<TextBlock FontSize="16" HorizontalAlignment="Left" Margin="0,6,0,0" x:Name="textBlock1" Text="帳號:" Width="46" Height="26" VerticalAlignment="Top" />
    		<TextBox Margin="52,0,61,0" x:Name="txtUserID" Height="32" VerticalAlignment="Top" />
    		<TextBlock FontSize="16" Height="26" HorizontalAlignment="Left" Margin="0,0,0,4" x:Name="textBlock2" Text="密碼:" VerticalAlignment="Bottom" Width="46" />
    		<PasswordBox Height="29" Margin="52,0,61,3" x:Name="txtPassword" VerticalAlignment="Bottom" />
    		<Button Content="登入" Height="32" HorizontalAlignment="Right" x:Name="button1" VerticalAlignment="Bottom" Width="57" Click="button1_Click" />
    	</Grid>
    </Grid>
</navigation:Page>
